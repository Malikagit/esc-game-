<div style="margin-top: 30px">
  <h1 class="text-center mb-5">Display all rooms</h1>

  <table class="table mb-5">
    <thead>
      <tr>
        <th>Room</th>
        <th>Description</th>
        <th>Price</th>
        <th>Capacity</th>
      </tr>
    </thead>
    {{#each rooms}}
      <tr>
        <td class="card flex-row flex-wrap">
        <div class="mt-5 div_img">
			<a href="/room/{{id}}">
			<img src="pictursRooms/{{picture_path}}"
					class="img-fluid"
			/>{{name}}</a>
	    </td>
        <td>{{description}}</td>
        <td>{{price}}</td>
        <td>{{capacity.0.value}} Ã  {{capacity.1.value}} joueurs</td>
        {{#if ../isAdmin}}
        <td><a type="button" id="btnModifyRoom" class="btn btn-secondary" href="/roomToUpdate/{{id}}" >modifier</a>
    
        {{/if}}
      </tr>
    {{/each}}
  </table>
</div>